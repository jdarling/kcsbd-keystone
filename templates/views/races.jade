extends ../layouts/default

include ../mixins/race

block intro
	.page-intro: .container
		h1 Races
		p
			| We usually meet up the 2nd Monday of every month for our board meetings. To stay in the loop, follow us on&nbsp;
			a(href="https://www.facebook.com/pages/Kansas-City-Soap-Box-Derby/114237131941324") facebook
			|.
		.buttons
			if !user
				a(href='/join').btn.btn-primary Join KCSBD
		if races.upcoming.length
			each race in races.upcoming
				+race(race, 'present')
		if races.past.length
			hr
			each race in races.past
				+race(race, 'past')
